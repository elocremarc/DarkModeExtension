{
  "manifest_version": 3,
  "name": "Dark Mode Toggle",
  "version": "1.0",
  "description": "Toggle dark mode on any webpage.",
  "action": {
    "default_icon": {
      "32": "icons/48-Dark.png",
      "48": "icons/48-Dark.png",
      "128": "icons/128-Dark.png"
    },
    "default_title": "Toggle Dark Mode"
  },
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16-Dark.png",
    "48": "icons/48-Dark.png",
    "128": "icons/128-Dark.png"
  }
}
